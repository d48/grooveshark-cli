#! /usr/bin/env node
// vi:syntax=javascript

require('coffee-script');

var path = require('path')
  , groove = require(path.join(__dirname, '..', 'lib/main.coffee'))
  , args = process.argv.splice(2)
  , cmd = (args.shift() || 'help')
  ;

if(groove[cmd]) {
  groove[cmd].apply(groove, args);
} else {
  groove['help'].apply(groove);
}
